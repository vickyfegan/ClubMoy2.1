<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.b00663982.clubmoy.ContactPage">


    <fragment
        android:id="@+id/clubAddress"
        android:name="com.google.android.gms.maps.MapFragment"
        android:layout_width="325dp"
        android:layout_height="325dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="13dp" />

    <TextView
        android:id="@+id/contactNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/clubAddress"
        android:layout_marginTop="21dp"
        android:text="Phone Number" />

    <EditText
        android:id="@+id/phoneNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/contactNumber"
        android:layout_alignBottom="@+id/contactNumber"
        android:layout_alignEnd="@+id/clubAddress"
        android:ems="10"
        android:inputType="phone"
        android:text="028 466 98576"/>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/contactNumber"
        android:layout_below="@+id/phoneNumber"
        android:layout_marginTop="8dp"
        android:text="Email Address" />

    <EditText
        android:id="@+id/editText9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView3"
        android:layout_alignBottom="@+id/textView3"
        android:layout_alignStart="@+id/phoneNumber"
        android:ems="10"
        android:inputType="textEmailAddress"
        android:text="clubmoy@moy-gfc.com" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView3"
        android:layout_below="@+id/editText9"
        android:layout_marginTop="8dp"
        android:text="Address" />

    <EditText
        android:id="@+id/editText11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/clubAddress"
        android:layout_below="@+id/editText9"
        android:ems="10"
        android:inputType="textMultiLine"
        android:text="Moy, Dungannon BT71 7TW"/>


</RelativeLayout>
